    <global-exceptions>
        <!-- sample exception handler
        <exception
            key="expired.password"
            type="app.ExpiredPasswordException"
            path="/changePassword.jsp"/>
        end sample -->
    </global-exceptions>

    <global-forwards>
      <forward
        name="welcome"
        path="/Welcome.do"/>
    </global-forwards>

    <action-mappings>
      <!-- ログイン -->
      <action
        path="/login"
        type="action.cmn.LoginAction"
        name="loginForm"
        scope="session"
        input="/pages/cmn/login.jsp"
        validate="true">
        <forward name="success" path="/pages/cmn/menu.jsp"/>
        <forward name="error" path="/pages/cmn/login.jsp"/>
      </action>

      <!-- ログアウト -->
      <action
        path="/logout"
        type="action.cmn.LogoutAction"
        name="loginForm"
        scope="session"
        validate="false">
        <forward name="success" path="/pages/cmn/login.jsp"/>
      </action>

      <!-- メニュー -->
      <action
        path="/menu"
        type="action.cmn.MenuAction"
        name="loginForm"
        scope="session"
        validate="false">
        <forward name="success" path="/pages/cmn/menu.jsp"/>
        <forward name="error" path="/pages/cmn/login.jsp"/>
      </action>

      <!-- 社員マスタメンテナンス 初期表示 -->
