      <!-- シフトマスタメンテナンス 登録 -->
      <action
        path="/shiftMstMntRegister"
        type="action.mst.ShiftMstMntRegisterAction"
        name="shiftMstMntRegisterForm"
        scope="session"
        validate="true">
        <forward name="success" path="/shiftMstMnt.do"/>
