        <forward name="success" path="/pages/shk/workDateRequestCheckSub.jsp"/>
      </action>
      <!-- 出勤希望日確認改ページ（サブ画面） -->
      <action
        path="/workDateRequestCheckSubPage"
        type="action.shk.WorkDateRequestCheckPageAction"
